<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Bookmarks</title>
  </head>
  <body>
    <% if current_user %>
    <div id='sign out'>
      <form class="buttons" action="/sessions" method="post">
        <input type="hidden" name="_method" value='delete'>
        <input type="submit" value='Sign out'>
      </form>
    </div>
    <% else %>
    <div id="sign in">
      <form action="/sessions" method="post">
          Email Address:<input type="email" name="email" required>
          Password:<input type="password" name="pwd" required>
          <input type="submit" value="Sign in">
      </form>
    </div>
    <div id='sign up'>
      <form action="/account/new" method="get">
        <input type="submit" value="Sign up">
      </form>
    </div>
   <% end %>
      <div id='notice'>
      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>
    </div>
    </div>
    <% if current_user %>
    Welcome, <%= current_user.email %>
    <% end %>
    <%= yield %>
  </body>
</html>
